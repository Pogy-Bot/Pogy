<%- include("partials/head", {bot, user, path, title: "Chaotic- Dashboard" }) %>
<div class="content">
  <h2>SELECT A SERVER</h2>
  <style>
    .glow {
      width: 100vw;

      height: 60px;
      background: linear-gradient(90deg, #dd4949, #5e40e4);
      position: fixed;

      top: 0;
      left: 0;
      right: 0;
      border-radius: 50%;
      transform: translateY(-20%);
      filter: blur(160px);
      z-index: -1;

    }

    body {
      background: linear-gradient(to right, #1c1c1d, #182848);
      font-family: Arial, sans-serif;
      color: #ffffff;
    }
  </style>
  <div class="glow"></div>
  <% if (!userExists) { %>
  <div style="
      width: 512px;
      padding: 16px;
      margin: 8px;
      background-color: rgba(77, 77, 255, 0.05);
    ">
    <h3 style="
        color: #4d4dff;
        margin-top: 0;
        margin-bottom: 8px;
        font-size: 18px;
        font-family: 'Poppins', sans-serif;
      ">
      Hey <%= user.username%>!
    </h3>
    <p style="
        margin: 0;
        font-size: 14px;
        font-family: 'Open Sans', sans-serif;
        color: #555;
      ">
      Looks like you aren't in Pogy's Support Server.
      <a href="/support">Join Here!</a>
    </p>
  </div>
  <% } %>

  <div class="servers">
    <% user.guilds.forEach(guild => { const permsOnGuild = new
    perms(BigInt(guild.permissions)); if(!permsOnGuild.has("MANAGE_GUILD")) {
    return } %> <% if (guild.icon) { iconurl =
    "https://cdn.discordapp.com/icons/" + guild.id + "/" + guild.icon +
    ".png??size=512"; } else { iconurl =
    "https://cdn.glitch.com/82fe990a-7942-42e3-9790-39807ccdb9f6%2Ficon-404-dark.png?v=1602427904949";
    } %> <% if (bot.guilds.cache.get(guild.id)) { %>
    <div class="server">
      <div class="icon-and-name">
        <img class="server-icon" src="<%= iconurl %>" alt="<% guild.name %>" />
        <p class="guild-name"><%= guild.name %></p>
      </div>
      <a class="edit button" href="/dashboard/<%= guild.id %>">Dashboard</a>
    </div>
    <% } %> <% }); %> <% user.guilds.forEach(guild => { const permsOnGuild = new
    perms(BigInt(guild.permissions)); if(!permsOnGuild.has("MANAGE_GUILD")) {
    return } %> <% if (guild.icon) { iconurl =
    "https://cdn.discordapp.com/icons/" + guild.id + "/" + guild.icon +
    ".png??size=512"; } else { iconurl =
    "https://cdn.glitch.com/82fe990a-7942-42e3-9790-39807ccdb9f6%2Ficon-404-dark.png?v=1602427904949";
    } %> <% if (!bot.guilds.cache.get(guild.id)) { %>
    <div class="server">
      <div class="icon-and-name">
        <img class="server-icon" src="<%= iconurl %>" alt="<% guild.name %>" />
        <p class="guild-name"><%= guild.name %></p>
      </div>
      <a href="<%= `${https}discordapp.com/oauth2/authorize?client_id=${clientID}&scope=bot%20applications.commands&guild_id=${guild.id}&response_type=code&redirect_uri=${encodeURIComponent(`${domain}/window`)}&permissions=1642761419863` %>" class="add button">Add Bot</a>
    </div>
    <% } %> <% }); %>
  </div>

  <%- include("partials/footer") %>
